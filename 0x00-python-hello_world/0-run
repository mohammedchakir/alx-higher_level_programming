#!/bin/bash
# This shell script runs a Python script specified by the $PYFILE environment variable.

# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable is not set."
    exit 1
fi

# Check if the specified Python script exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: The specified Python script '$PYFILE' does not exist."
    exit 1
fi

# Run the Python script
python3 "$PYFILE"

